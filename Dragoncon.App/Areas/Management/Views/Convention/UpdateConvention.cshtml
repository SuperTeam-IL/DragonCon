@using DragonCon.Modeling.Helpers
@model DragonCon.Features.Management.Convention.ConventionUpdateViewModel
@{
    ViewBag.Title = $"עדכון כנס {Model.NameDate.Name} ({Model.NameDate.Id.GetNumberFromId()})";
    if (string.IsNullOrWhiteSpace(Model.ErrorMessage) == false)
    {
        <div class="alert alert-danger">תקלה: @Model.ErrorMessage</div>
    }
}

<div class="right-to-left">
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" id="nav-days-tab" data-toggle="tab" href="#nav-days" role="tab" aria-controls="nav-days" aria-selected="true">שם ותאריכים</a>
            <a class="nav-item nav-link" id="nav-halls-tab" data-toggle="tab" href="#nav-halls" role="tab" aria-controls="nav-halls" aria-selected="false">אולמות</a>
            <a class="nav-item nav-link" id="nav-tickets-tab" data-toggle="tab" href="#nav-tickets" role="tab" aria-controls="nav-tickets" aria-selected="false">כרטיסים</a>
            <a class="nav-item nav-link" id="nav-details-tab" data-toggle="tab" href="#nav-details" role="tab" aria-controls="nav-details" aria-selected="false">פרטים נוספים</a>
        </div>
    </nav>
    <div class="tab-content">

        <div class="tab-pane fade show active" id="nav-days" role="tabpanel" aria-labelledby="nav-days-tab">
            @await Html.PartialAsync("CreateUpdateNameDates", Model.NameDate)
        </div>
    
        <div class="tab-pane fade" id="nav-tickets" role="tabpanel" aria-labelledby="nav-tickets-tab">
            @await Html.PartialAsync("UpdateTickets", Model.Tickets)
        </div>

        <div class="tab-pane fade" id="nav-halls" role="tabpanel" aria-labelledby="nav-halls-tab">
            @await Html.PartialAsync("CreateUpdateHalls", Model.Halls)
        </div>

        <div class="tab-pane fade" id="nav-details" role="tabpanel" aria-labelledby="nav-details-tab">
            עוד לא פעיל
        </div>
    </div>
</div>
