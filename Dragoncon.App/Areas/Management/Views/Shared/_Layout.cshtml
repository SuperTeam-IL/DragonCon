<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>דרקוניקון ניהול - @ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/@@fortawesome/fontawesome-free/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-select/dist/css/bootstrap-select.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-toggle/css/bootstrap-toggle.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/pickadate/lib/themes/classic.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/pickadate/lib/themes/classic.date.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/pickadate/lib/themes/classic.time.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/chosen-js/chosen.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" />

    @RenderSection("Styles", required: false)
</head>
<body style="">
    <div class="right-to-left">
        <ul class="right-to-left admin-navbar bg-dark">
            <li class="admin-navbar-brand text-center">
                <a class="admin-navbar-brand-link" href="#">דרקוניקון<br />אזור הניהול</a>
            </li>
            <li class="list-divider"></li>
            <li>
                <a asp-area="Management" asp-controller="Events" asp-action="Information">מידע אירועים</a>
            </li>
            <li>
                <a asp-area="Management" asp-controller="Participants" asp-action="Information">מידע משתמשים</a>
            </li>
            <li class="list-divider"></li>
            <li>
                <a asp-area="Management" asp-controller="Events" asp-action="Manage">ניהול אירועים</a>
            </li>
            <li>
                <a asp-area="Management" asp-controller="Participants" asp-action="Manage">ניהול משתמשים</a>
            </li>
            <li class="list-divider"></li>
            <li>
                <a asp-area="Management" asp-controller="Convention" asp-action="Manage">ניהול כנסים</a>
            </li>
            <li class="list-divider"></li>
        </ul>
        <div class="container container-admin">
            <h4 class="Title-Text">@ViewBag.Title</h4>

            <div class="body-content">
                @RenderBody()
            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/popper.js/dist/umd/popper.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-toggle/js/bootstrap-toggle.min.js" asp-append-version="true"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.min.js" asp-append-version="true"></script>
    <script src="~/lib/pickadate/lib/picker.js" asp-append-version="true"></script>
    <script src="~/lib/pickadate/lib/picker.date.js" asp-append-version="true"></script>
    <script src="~/lib/pickadate/lib/picker.time.js" asp-append-version="true"></script>
    <script src="~/lib/chosen-js/chosen.jquery.min.js" asp-append-version="true"></script>

    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('.bootstrap-toggle').bootstrapToggle();
            setupPickers();
        });

        function setupPickers() {
            $('.datepicker').pickadate({
                clear: '',
                today: '',
                monthsFull: ['ינואר', 'פברואר', 'מרץ', 'אפריל', 'מאי', 'יוני', 'יולי', 'אוגוסט', 'ספטמבר', 'אוקטובר', 'נובמבר', 'דצמבר'],
                weekdaysShort: ['א', 'ב', 'ג', 'ד', 'ה', 'ו', 'ש'],
                format: 'dd/mm/yyyy'

            });
            $('.timepicker').pickatime(
                {
                    min: [7, 00],
                    max: [23, 00],
                    clear: '',
                    format: 'HH:i',
                });
            $('.chosen').chosen({
                disable_search: true,
                inherit_select_classes: true,
                rtl: true,
                width: "100%"});
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
