@using System.Globalization
@using DragonCon.Modeling.Helpers
@model List<DragonCon.Modeling.Models.UserDisplay.DynamicUpdateItem>

@foreach (var update in Model.OrderByDescending(x => x.Date))
{
    if (update.Title.IsEmptyString())
    {
        continue;
    }

    <hr />
    <p class="card-paragraph">
        <i class="fa fa-fw fa-bullhorn fa-flip-horizontal"></i>
        <strong>@update.Date.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture) -  @update.Title</strong>
        @if (update.Description.IsNotEmptyString())
        {
            <br />
            @update.Description
        }
        @if (update.Link.IsNotEmptyString())
        {
            <br />
            <a href="@update.Link" target="_blank"> למידע נוסף <i class="fa fa-fw fa-external-link-alt fa-flip-horizontal"></i></a>
        }
    </p>
}