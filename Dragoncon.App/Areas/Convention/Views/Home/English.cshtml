<div style="direction: ltr; text-align: left;">
    <div class="card card-gray-float">
        <div class="card-body">
            <h3 class="card-title text-bold">
                <i class="fa fa-fw fa-dragon dragon-organge-color"></i>
                &nbsp;
                Contact Us
            </h3>

            <form>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" class="form-control" placeholder="Israel Israeli" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" placeholder="Israela@@israeli.com" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input type="tel" class="form-control" placeholder="050-123456789" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label>Message</label>
                            <textarea type="text" class="form-control" placeholder="Ask a question"></textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <input type="submit" class="form-control btn btn-primary" value="Send" />
