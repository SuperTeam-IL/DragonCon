<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>דרקוניקון - @ViewBag.Title</title>

    @await Html.PartialAsync("_PartialSharedStyles")
    @RenderSection("Styles", required: false)
</head>
<body class="right-to-left" style="text-align: right;">
    <nav class="navbar navbar-dark navbar-expand-md bg-primary">
        <a class="navbar-brand" href="/"><img src="/images/DragonCon.png" style="height: 75px;" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">דף הבית</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">אירועים</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">מידע למבקר</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">איזור אישי</a>
                </li>
                <li class="nav-item">
                    <a asp-area="Management" asp-controller="Dashboard" asp-action="Index" class="nav-link"><strong>אזור ניהול</strong></a>
                </li>
            </ul>
        </div>
    </nav>

<div class="container">
    <h4 class="Title-Text">@ViewBag.Title </h4>
    
    <div class="modal-placeholder" id="modal-placeholder" style="display: none;">
        <div class="modal-placeholder-content text-center">
            <i class="fa fa-fw fa-spin fa-spinner"></i> אנא המתן...
        </div>
    </div>
    
    <div class="body-content">
        @RenderBody()
    </div>

    @await Html.PartialAsync("_PartialFooter")

</div>


    @await Html.PartialAsync("_PartialSharedScripts")
    @RenderSection("Scripts", required: false)
</body>
</html>
