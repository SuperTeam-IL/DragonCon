<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>דרקוניקון - @ViewBag.Title</title>

    @await Html.PartialAsync("_PartialSharedStyles")
    @RenderSection("Styles", required: false)
</head>
<body class="right-to-left image-background" style="text-align: right;">
    <nav class="navbar navbar-dragon navbar-expand-md" >
        <a class="navbar-brand" href="/"><img src="/images/logo.png" style="height: 75px;" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" style="font-size: 1.5em;" 
             id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item active" style="padding-left:15px">
                    <a class="nav-link" href="/">דף הבית</a>
                </li>
                <li class="nav-item" style="padding-left:15px">
                    <a class="nav-link" asp-area="Convention" asp-controller="Home" asp-action="Info">מידע למבקר</a>
                </li>
                <li class="nav-item" style="padding-left:15px">
                    <a class="nav-link" href="#">אירועי הכנס</a>
                </li>
                <li class="nav-item" style="padding-left:15px">
                    <a class="nav-link" asp-area="Convention" asp-controller="Home" asp-action="Volunteering">הנחיה והתנדבות</a>
                </li>
                <li class="nav-item" style="padding-left:15px">
                    <a class="nav-link" href="#">הרשמה לכנס</a>
                </li>

                <li class="nav-item" style="padding-left:15px">
                    <a class="nav-link" href="#">English</a>
                </li>
                <li class="nav-item" style="padding-right:35px">
                    <a asp-area="Management" asp-controller="Dashboard" asp-action="Index" class="nav-link">
                        <strong class="dragon-organge-color"><i class="fa fa-fw fa-user-cog"></i> אזור הניהול</strong>
                    </a>
                </li>

            </ul>
        </div>
    </nav>

<div class="container">
    <h4 class="Title-Text">
        @if (Actor.HasDisplayConvention)
        {
            @Actor.DisplayConvention.ConventionName
        }
    </h4>
    
    <div class="modal-placeholder" id="modal-placeholder" style="display: none;">
        <div class="modal-placeholder-content text-center">
            <i class="fa fa-fw fa-spin fa-spinner"></i> אנא המתן...
        </div>
    </div>
    
    <div class="body-content no-background">
        @RenderBody()
    </div>

    @await Html.PartialAsync("_PartialFooter")

</div>


    @await Html.PartialAsync("_PartialSharedScripts")
    @RenderSection("Scripts", required: false)
</body>
</html>
