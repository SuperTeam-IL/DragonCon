@using DragonCon.Modeling.Helpers
@model DragonCon.App.Settings.LocationSettings
@if (Actor.HasDisplayConvention)
{
    var locationExtra = Actor.DisplayDynamics.Location;
    @if (locationExtra.LocationName.IsNotEmptyString())
    {
        <span class="text-bold">כתובת:</span> @locationExtra.LocationName

        if (locationExtra.LocationDescription.IsNotEmptyString() ||
            locationExtra.LocationWaysOfArrival.IsNotEmptyString() ||
            locationExtra.LocationMap.IsNotEmptyString())
        {
            <br />
        }
    }


    if (Model.ShowDetails && locationExtra.LocationDescription.IsNotEmptyString())
    {
        <br />
        <strong>פרטים:</strong>
        <br />

        @locationExtra.LocationDescription
        <br />
    }
    if (Model.ShowWays && locationExtra.LocationWaysOfArrival.IsNotEmptyString())
    {
        <br />
        <strong>דרכי הגעה:</strong>
        <br />
        <span>
            @locationExtra.LocationWaysOfArrival
        </span>
        <br />
    }
    if (Model.ShowImage && locationExtra.LocationImage.IsNotEmptyString())
    {
        <br />
        <strong>תמונת המקום:</strong>
        <br />
        <img style="width: 100%" src="@locationExtra.LocationImage" />
        <br />
    }
    if (Model.ShowMap && locationExtra.LocationMap.IsNotEmptyString())
    {
        var height = Model.ShowTallMap ? "450px" : "200px";

        <br />
        <strong>מפת הגעה:</strong>
        <iframe width="100%"
                height="@height"
                src="@locationExtra.LocationMap"></iframe>
        @if (Model.ShowMapExternal)
        {
            <br />
            <div class="text-center">
                <a target="_blank" href="@locationExtra.LocationMap" class="btn dragon-btn">לצפיה בגוגל מפות</a>
            </div>
        }
        <br />
    }

    if (Model.ShowLearnMore)
    {
        <br />
        <div class="text-center">
            <a asp-area="Convention" asp-controller="Home" asp-action="Info" asp-fragment="tag_location" class="btn dragon-btn">לפרטים נוספים</a>
        </div>

    }
}